<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Frontend</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />

    <style>
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; 
            font-family: Arial, sans-serif;
            background: #1a1a1a;
            color: #d4d4d4;
        }

        header.navbar {
            transition: transform 0.3s ease-in-out;
            will-change: transform;
            flex-shrink: 0; 
        }

        main {
            flex: 1 0 auto; 
            padding: 20px;
            padding-bottom: 60px; 
            box-sizing: border-box;
        }

        footer {
            height: 60px;
            flex-shrink: 0;
            background: #252526;
            color: #d4d4d4;
            display: flex;
            align-items: center;
            border-top: 1px solid #333;
        }

  
        .sidebar {
            width: 250px;
            background: #252526;
            padding: 10px;
            overflow-y: auto;
            border-right: 1px solid #333;
        }

      

    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ApiTestaso</a>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            &copy; 2025 - ApiTestaso - <a asp-area="" asp-page="/Faq">Faq</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function() {
            let lastScrollTop = 0;
            const navbar = document.querySelector('header.navbar, header > nav');

            if (!navbar) return;

            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop && scrollTop > 50) {
                    navbar.classList.add('hidden');
                } else {
                    navbar.classList.remove('hidden');
                }

                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
            }, false);
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>